<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="@dimen/dp_138"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/i1"
                android:src="@drawable/common_icon_money_n_hdpi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额支付"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                app:layout_constraintLeft_toRightOf="@id/i1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <CheckBox
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:button="@null"
                android:background="@drawable/payment_button_select"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_24"
                android:id="@+id/remainingsum"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/i2"
                android:src="@drawable/common_icon_weixin_n_hdpi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                app:layout_constraintLeft_toRightOf="@id/i2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <CheckBox
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:button="@null"
                android:background="@drawable/payment_button_select"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_24"
                android:id="@+id/weixin"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/i3"
                android:src="@drawable/common_icon_zhifubao_n_hdpi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                app:layout_constraintLeft_toRightOf="@id/i3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <CheckBox
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:button="@null"
                android:background="@drawable/payment_button_select"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_24"
                android:id="@+id/zhifubao"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
    <Button
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/enter_button"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14"
        android:text="支付"
        android:gravity="center"
        android:background="#ff5e70"
        android:layout_marginBottom="@dimen/dp_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#c0111111"
        android:id="@+id/success_bg">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/hdpi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_152"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/i12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="#ffffff"
            android:text="支付成功"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/i12"
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/t1"
            />

        <Button
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/payments"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:text="返回首页"
            app:layout_constraintTop_toBottomOf="@id/t1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/successhome"
            />
        <Button
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/queryorderfrom"
            android:textSize="@dimen/sp_14"
            android:textColor="#ff5f71"
            android:text="查看订单"
            app:layout_constraintTop_toBottomOf="@id/successhome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/successorderfrom"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c0111111"
        android:visibility="invisible"
        android:id="@+id/fail_bg">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@drawable/group2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_152"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/i11"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="#ffffff"
            android:text="支付失败"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/i11"
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/t11"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂未开通微信与支付宝支付"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toBottomOf="@id/t11"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/t21"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择余额支付"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toBottomOf="@id/t21"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/t31"/>
        <Button
            android:layout_width="@dimen/dp_108"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/payments"
            android:textSize="@dimen/sp_14"
            android:textColor="#fff"
            android:text="继续支付"
            app:layout_constraintTop_toBottomOf="@id/t31"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/fail"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>