<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp_70"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_myaddress"
        android:padding="@dimen/dp_8"
        android:layout_height="@dimen/dp_97">
        <ImageView
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_81"
            android:id="@+id/shooping_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/shopping_title"
            android:maxLines="2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shooping_image"
            app:layout_constraintTop_toTopOf="@id/shooping_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopping_price"
            android:textColor="#ff0606"
            android:textSize="@dimen/dp_14"
            android:text="520.00"
            app:layout_constraintBottom_toBottomOf="@id/shooping_image"
            app:layout_constraintLeft_toRightOf="@id/shooping_image"
            />
<Button
    android:layout_width="@dimen/dp_70"
    android:layout_height="@dimen/dp_26"
    android:id="@+id/appraise_button"
    android:text="去评价"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/shooping_image"
    android:gravity="center"
    android:background="#ff5757"
    />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>