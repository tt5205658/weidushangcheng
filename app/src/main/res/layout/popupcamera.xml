<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="@dimen/dp_100"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popupCamera_startCamera"
    android:text="打开相机"
    android:textColor="#666"
    android:gravity="center"
    android:padding="@dimen/dp_10"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#777"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popupCamera_startPhoto"
        android:text="打开相册"
        android:textColor="#666"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#777"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popupCamera_cancle"
        android:text="取消"
        android:textColor="#666"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        />
</LinearLayout>