<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_register_layout_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/register_icon_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_38"
android:hint="请输入手机号"
            android:background="@drawable/activity_main_edittext_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="5dp"
            android:inputType="phone"
            android:maxLength="11"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:id="@+id/activity_register_edittext_username"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></View>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_register_layout_verificationcode"
        app:layout_constraintTop_toBottomOf="@id/activity_register_layout_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/register_icon_verification"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:focusable="false"
            android:background="@drawable/activity_main_edittext_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="5dp"
            android:hint="点击右侧验证"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_50"

            android:textSize="@dimen/sp_16"
            android:id="@+id/activity_register_edittext_verificationcode"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_register_get_verificationcode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></View>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_register_layout_password"
        app:layout_constraintTop_toBottomOf="@id/activity_register_layout_verificationcode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/register_icon_lock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/activity_main_edittext_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:maxLength="20"
            android:layout_marginRight="@dimen/dp_50"
            android:inputType="textPassword"
            android:paddingTop="5dp"
            android:layout_marginTop="@dimen/dp_3"
            android:hint="请输入密码"
            android:textSize="@dimen/sp_18"
            android:id="@+id/activity_register_edittext_userpassword"
            />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:id="@+id/activity_register_edittext_pwdhide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/login_icon_eye"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></View>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_text_login"
        app:layout_constraintTop_toBottomOf="@id/activity_register_layout_password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="10dp"
        android:text="已有账户?立即登录"
        android:textSize="@dimen/sp_14"
        android:textColor="#ffffff"
        />
    <Button
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_125"
        android:gravity="center"
        android:text="注册"
        android:textSize="@dimen/sp_18"
        android:textColor="#ff5f71"
        android:id="@+id/activity_register_button_login"
        android:background="@drawable/activity_main_button_login"
        />
</android.support.constraint.ConstraintLayout>