<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffe"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:clipChildren="false"
            android:background="#fff"
            android:layout_height="wrap_content">
            <com.stx.xhb.xbanner.XBanner
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_164"
                app:isClipChildrenMode="true"
                app:clipChildrenLeftRightMargin="@dimen/dp_10"
                android:id="@+id/fragment_home_fragmenthome_xbanner_top"
                ></com.stx.xhb.xbanner.XBanner>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@mipmap/bg_rxxp_syf"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热销推荐"
                    android:textColor="#ff7f57"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:id="@+id/rxtjimage"
                    android:src="@mipmap/home_btn_more_purple_n_hdpi"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clipChildren="false"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_13">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_home_fragmenthome_recycle_hotrecommend"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_14"

                android:background="@drawable/item_circle"
                >
            </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"
           android:layout_marginTop="@dimen/dp_10"
           android:orientation="vertical">
           <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_30"
               android:background="@mipmap/bg_mlss_syf"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="魔力时尚"
                   android:textColor="#9000ff"
                   android:textSize="@dimen/sp_16"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   />
               <ImageView
                   android:layout_width="@dimen/dp_24"
                   android:layout_height="@dimen/dp_24"
                   android:layout_marginRight="@dimen/dp_24"
                   android:id="@+id/mlssimage"
                   android:src="@mipmap/home_btn_more_purple_n_hdpi"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   />
           </android.support.constraint.ConstraintLayout>
           <com.jcodecraeer.xrecyclerview.XRecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/fragment_home_fragmenthome_recycle_fashion"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_marginRight="@dimen/dp_24"
               android:background="@drawable/item_circle"
               >
           </com.jcodecraeer.xrecyclerview.XRecyclerView>
       </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/bg_pzsh_syf"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品质生活"
            android:textColor="#ff4f57"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:id="@+id/pzssimage"
            android:src="@mipmap/home_btn_more_purple_n_hdpi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:id="@+id/fragment_home_fragmenthome_recycle_quality"
        ></com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>
    </LinearLayout>


</ScrollView>
