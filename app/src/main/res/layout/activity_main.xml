<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_main_layout_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/activity_main_edittext_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="10dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:textSize="@dimen/sp_18"
            android:id="@+id/activity_main_edittext_username"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></View>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_main_layout_password"
        app:layout_constraintTop_toBottomOf="@id/activity_main_layout_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/login_icon_lock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/activity_main_edittext_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:maxLength="20"
            android:layout_marginRight="@dimen/dp_50"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_18"
            android:id="@+id/activity_main_edittext_userpassword"
            />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:id="@+id/activity_main_edittext_pwdhide"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/login_icon_eye"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></View>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/activity_main_layout_checkbox"
        app:layout_constraintTop_toBottomOf="@id/activity_main_layout_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        >
        <CheckBox
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_24"
            android:id="@+id/activity_main_checkbox_remember_pwd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
android:layout_marginTop="@dimen/dp_m_5"
            android:buttonTint="#ffffff"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="记住密码"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/activity_main_checkbox_remember_pwd"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:id="@+id/activity_main_text_registered"
            android:text="快速注册"
            android:layout_marginTop="@dimen/dp_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#ffffff"
            />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_120"
        android:gravity="center"
        android:text="登录"
        android:textSize="@dimen/sp_18"
        android:textColor="#ff5f71"
        android:id="@+id/activity_main_button_login"
        android:background="@drawable/activity_main_button_login"
        />
</android.support.constraint.ConstraintLayout>