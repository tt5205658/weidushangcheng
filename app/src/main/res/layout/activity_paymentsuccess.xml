<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80111111"
    android:id="@+id/success_bg">
 <ImageView
     android:layout_width="@dimen/dp_100"
     android:layout_height="@dimen/dp_100"
     android:src="@drawable/hdpi"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:layout_marginTop="@dimen/dp_152"
     app:layout_constraintTop_toTopOf="parent"
     android:id="@+id/i1"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_20"
        android:textColor="#ffffff"
        android:text="支付成功"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/i1"
        android:layout_marginTop="@dimen/dp_30"
        android:id="@+id/t1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂未开通微信与支付宝支付"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/t2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择余额支付"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@id/t2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/t3"/>
    <Button
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/payments"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:text="继续支付"
        app:layout_constraintTop_toBottomOf="@id/t3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/success"
        />
</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>