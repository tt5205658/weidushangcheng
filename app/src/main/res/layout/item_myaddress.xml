<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
    android:layout_width="@dimen/dp_313"
    android:layout_height="wrap_content"
    android:background="@drawable/item_myaddress">

<android.support.constraint.ConstraintLayout
    android:layout_width="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dp_20"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_24"
    android:id="@+id/c1"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_14"
android:text="李小二"
        android:id="@+id/item_myaddress_userName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_myaddress_userPhone"
        android:text="12345678901"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/c2"
        app:layout_constraintTop_toBottomOf="@id/c1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_myaddress_userAddress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="tttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
            />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"
        android:id="@+id/c3"
        android:background="#eee"
        app:layout_constraintTop_toBottomOf="@id/c2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/c4"
        app:layout_constraintTop_toBottomOf="@id/c3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_myaddress_defaultaddress"
            android:layout_margin="@dimen/dp_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            android:text="设置为默认收货地址"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_myaddress_defaultaddress"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <Button
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:text="修改"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:padding="@dimen/dp_0"
            android:id="@+id/item_myaddress_updata"
            android:background="@drawable/item_myaddress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/item_myaddress_del"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:text="删除"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:padding="@dimen/dp_0"
            android:id="@+id/item_myaddress_del"
            android:background="@drawable/item_myaddress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
</LinearLayout>