<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <android.support.v4.view.ViewPager
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:id="@+id/activity_home_viewpage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000"
        app:layout_constraintBottom_toTopOf="@id/c1"
        ></android.support.v4.view.ViewPager>

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_60"
        android:clipChildren="false"
        android:id="@+id/c1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_homepage_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <RadioGroup
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/activity_home_radiogroup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent">

            <RadioButton
                android:id="@+id/activity_home_bottom_radiobutton_homepage"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_32"
                android:checked="true"
                android:background="@drawable/homeactivity_bottom_home"
                android:button="@null" />

            <RadioButton
                android:id="@+id/activity_home_bottom_radiobutton_circle"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@drawable/homeactivity_bottom_circle"
                android:button="@null" />

            <RadioButton
                android:id="@+id/activity_home_bottom_radiobutton_shopping"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@mipmap/tab_home_bottom_gouwuche"
                android:button="@null" />

            <RadioButton
                android:id="@+id/activity_home_bottom_radiobutton_ordeform"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_36"
                android:background="@drawable/homeactivity_bottom_ordeform"

                android:button="@null"

                />

            <RadioButton
                android:id="@+id/activity_home_bottom_radiobutton_my"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_32"
                android:background="@drawable/homeactivity_bottom_my"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>